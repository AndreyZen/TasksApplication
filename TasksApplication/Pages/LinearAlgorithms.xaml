<Page x:Class="TasksApplication.Pages.LinearAlgorithms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TasksApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LinearAlgorithms">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource BrdStyle}">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="Задачи первого уровня сложности" FontWeight="Bold" FontSize="18"/>
                <TextBlock Text="Введите X" FontSize="14" Margin="0 10 0 0"/>
                <TextBox x:Name="TbValue" FontSize="18" TextChanged="TbValue_TextChanged"/>
                <TextBlock FontSize="14" Margin="0 10">
                    <Run Text="F = "/>
                    <Run x:Name="TbRnF"/>
                    <Run Text="G = "/>
                    <Run x:Name="TbRnG"/>
                </TextBlock>
            </StackPanel>
        </Border>

    </Grid>
</Page>
